<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    android:elevation="0dp"
    android:layout_marginBottom="-15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/nav_bg"
        android:layout_marginBottom="15dp"
        android:gravity="center_horizontal">

        <View
            android:id="@+id/view2"
            android:layout_width="100dp"
            android:background="@drawable/bottom_chip_bg"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_height="5dp" />


        <LinearLayout
            android:id="@+id/bottom_sheet_add_image"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/image"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text="Add Image"
                android:textSize="20dp"
                style="@style/textColor"
                android:fontFamily="@font/league"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_sheet_add_url"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="20dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/link"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text="Add URL"
                android:textSize="20dp"
                style="@style/textColor"
                android:fontFamily="@font/league"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_sheet_delete_note"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="15dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/delete"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text="Delete Note"
                android:textSize="20dp"
                android:textColor="#FF493E"
                android:fontFamily="@font/league"/>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>